/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compilerOptions": {
    "target": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "lib": ["dom", "es6"],
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}